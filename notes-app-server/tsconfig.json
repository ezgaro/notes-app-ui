{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs", // Use "commonjs" for Node.js compatibility
    "esModuleInterop": true, // Enables default imports from CommonJS modules
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
